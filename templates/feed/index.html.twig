{% extends 'base.html.twig' %}

{% block title %}Hello Visitor!{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <h4>10 most frequent words</h4>
                    <ul class="list-group">
                        {% for word,count in top10words %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ word }}
                                <span class="badge badge-primary badge-pill">{{ count }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col mt-5">
                    <h4>List of feed items</h4>
                    {% for item in items %}
                        <li class="list-group-item">
                            {{ item.getTitle }}
                        </li>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% else %}
        <div class="container mt-5">
            <div class="row">
                <div class="column">
                    <h1>Hello visitor! âœ…</h1>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center"><a href="{{ path('app_login') }}">Login</a></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center"><a href="{{ path('app_register') }}">Register</a></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center"><a href="{{ path('app_logout') }}">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
