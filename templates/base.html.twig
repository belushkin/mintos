<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('global') }}
        {% endblock %}
    </head>
    <body>
        {% set current_path = app.request.get('_route') %}

        {% block body %}{% endblock %}
        {% block javascripts %}
            {% if current_path == "app_register" %}
                {{ encore_entry_script_tags('app') }}
            {% endif %}
        {% endblock %}
    </body>
</html>
